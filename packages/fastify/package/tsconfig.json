{
  "include": ["src/**/*"],
  "compilerOptions": {
    "target": "es2016",
    "module": "esnext",
    "allowJs": true,
    // "rootDir": "./",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
